<div class="container">
  <div class="row row-margin-top">

    <div class="form-background w-100 d-flex flex-column align-items-center">
      <div class="form-group">
        <%= simple_form_for(@artwork, url: artist_artwork_path(@artist, @artwork), method: :patch) do |f| %>
        <%= f.input :name %>
        <%= f.input :year %>
        <%= f.input :description %>
        <%= f.input :width %>
        <%= f.input :height %>
        <%= f.input :depth %>
        <%= f.input :price %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.association :medium %>
        <%= f.association :category %>
        <%= f.submit "Edit artwork", class: "btn-margin btn-ghost", method: :patch %>
        <% end %>
      </div>
    </div>
  </div>
</div>

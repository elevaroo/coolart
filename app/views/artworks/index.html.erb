<div class="container-fluid">

  <%= form_tag artworks_path, method: :get do %>
    <%= select_tag(:category, options_for_select(['Painting', 'Sculpture', 'Photography', 'Print', 'Drawing', 'Mixed Media'], params[:category]), prompt: 'select category') %>
    <%= select_tag(:medium, options_for_select(['Oil paint', 'Watercolour', 'Pencil', 'Etching', 'Lithography', 'Bronze', 'Marble', 'Wood', 'Iron', 'Plastic', 'Acrylic paint', 'Chalk', 'Pastel'], params[:medium]), prompt: 'select medium') %>
    <%= text_field_tag(:price_min, placeholder: "min price") %>
    <%= text_field_tag(:price_max, placeholder: "max price") %>
    <%= text_field_tag(:tag, placeholder: "tag") %>
  <%= submit_tag "Find your Artwork", class: "btn" %>
  <% end %>


  <div class="row">
    <div class="col-8">

      <div class="card-container d-flex flex-wrap">
        <div class="d-flex flex-wrap">
          <% @artworks.each do |artwork| %>

              <%= link_to artist_artwork_path(artwork.artist, artwork) , style: 'text-decoration: none' do%>
              <div class="card-wrapper">
                <div class="card-item">
                  <%= image_tag "artwork", class:"artwork"%>
                </div>

                <div class="card-info">
                  <div class="d-flex justify-content-between">
                    <h4 class="artwork-title"><%= artwork.name.capitalize %></h4>
                    <h4 class="card-price"><%= artwork.price %> â‚¬</h4>
                  </div>

                  <h4 class="card-dimensions"><%= artwork.medium.name %>, W <%= artwork.width %> cm x H <%= artwork.height %> cm</h4>
                  <h4 class="card-artist"><%= artwork.artist.user.first_name %> <%= artwork.artist.user.last_name %></h4>
                </div>
              </div>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


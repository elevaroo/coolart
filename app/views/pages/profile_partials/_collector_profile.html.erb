<div class="tab-content mx-4" id="v-pills-tabContent">
  <div class="tab-pane fade show active" id="v-pills-account" role="tabpanel" aria-labelledby="v-pills-account-tab">
    <%= render "pages/collector_partials/my_account" %>
  </div>
  <div class="tab-pane fade" id="v-pills-collection" role="tabpanel" aria-labelledby="v-pills-collection-tab">
    <%= render "pages/collector_partials/my_collection" %>
  </div>
  <div class="tab-pane fade" id="v-pills-orders" role="tabpanel" aria-labelledby="v-pills-orders-tab">
    <%= render "pages/collector_partials/orders" %>

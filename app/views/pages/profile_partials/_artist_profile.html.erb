<h1 class="text-center">Welcome <%= current_user.first_name %>!</h1>

<div class="d-flex">
  <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
    <a class="nav-link active" id="pills-account-tab" data-toggle="pill" href="#pills-account" role="tab" aria-controls="pills-account" aria-selected="true">My account</a>
    <a class="nav-link" id="pills-artworks-tab" data-toggle="pill" href="#pills-artworks" role="tab" aria-controls="pills-artworks" aria-selected="false">Artworks</a>
    <a class="nav-link" id="pills-orders-tab" data-toggle="pill" href="#pills-orders" role="tab" aria-controls="pills-orders" aria-selected="false">Orders</a>
  </div>
  <div class="tab-content mx-4" id="v-pills-tabContent">
    <div class="tab-pane fade show active" id="pills-account" role="tabpanel" aria-labelledby="pills-account-tab">
      <%= render "pages/artist_partials/my_account" %>
    </div>
    <div class="tab-pane fade" id="pills-artworks" role="tabpanel" aria-labelledby="pills-artworks-tab">
      <%= render "pages/artist_partials/artworks" %>
    </div>
    <div class="tab-pane fade" id="pills-orders" role="tabpanel" aria-labelledby="pills-orders-tab">
      <%= render "pages/artist_partials/orders" %>
    </div>
  </div>
</div>

<div class="account-collector">
  <div class="account-picture">
    <% if current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key %>
    <% else %>
      <img src='https://www.pphfoundation.ca/wp-content/uploads/2018/05/default-avatar.png'>
    <% end %>
  </div>
  <div class="account-content">
    <h3 class="name"><%= current_user.first_name %> <%= current_user.last_name %></h3>
    <h4 class="title">@<%= current_user.username %></h4>
  </div>
  <div class="edit-btn">
    <%= link_to "Update details", edit_user_registration_path %>
  </div>
</div>

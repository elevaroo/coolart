<div class="p-2 d-flex flex-wrap align-content-start">
<% current_user.account.orders.each do |order| %>
  <div class="card-order">
    <div class="order-picture">

    </div>
    <div class="order-content">
    <h1><%= order.artwork.name %>, <%= order.artwork.year %></h1>
    <h2><%= order.artwork.artist %></h2>
    <h3><%= order.artwork.price %> â‚¬</h3>
    <% if order.status.confirmed? %>
      <h4 id="await-shipping">Awaiting shipping</h4>
    <% elsif order.status.dispatched? %>
      <h4 id="shipped">Shipped</h4>
    <% else %>
      <h4 id="fulfilled">Fulfilled</h4>
    <% end %>
    </div>
  </div>
<% end %>
</div>

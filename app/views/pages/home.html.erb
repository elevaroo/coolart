<div class="home-banner">
  <img class="logo-img" src="../assets/logo-image.jpg">
  <h1>Start your own art collection.</h1>
</div>

<div class="background-container">

  <div class="container">
  <h2 id="titles-home">FEATURED CATEGORIES</h2>
    <!-- insert category card here -->
    <div class="card-container d-flex flex-wrap">
      <div class="overview-element mx-auto">
        <% @categories.each do |category| %>
        <div class="overview-element-category m-2" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= image_path("#{category.name.downcase}.png") %>')">
        <%= link_to category.name, category_path(category.name)%>
      </div>
      <% end %>
    </div>
  </div>

  <div class="container">
  <h2 id="titles-home">SHOP BY PRICE</h2>
    <div class="d-flex justify-content-between">
      <div class="overview-element-budget m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path('wall1.png') %>')"><%= link_to 'UP TO €500', artworks_path(price_min: 0, price_max: 500) %></div>
      <div class="overview-element-budget m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path('wall2.png') %>')"><%= link_to '€500 - €1000', artworks_path(price_min: 500, price_max: 1000) %></div>
      <div class="overview-element-budget m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path('wall3.png') %>')"><%= link_to '€1000 - €2000', artworks_path(price_min: 1000, price_max: 2000) %></div>
      <div class="overview-element-budget m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path('wall4.png') %>')"><%= link_to '€2000 AND MORE', artworks_path(price_min: 2000, price_max: 100000) %></div>
    </div>
  </div>

  <div class="container">
  <h2 id="titles-home">OUR SELECTED ARTWORKS</h2>
    <div class="card-container d-flex flex-wrap">
      <div class="d-flex flex-wrap">
        <% @samples.each do |artwork| %>
          <%= render "artworks/card", artwork: artwork %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="more-info-container">
    <h2 id="more-titles-home">EXPLORE MORE</h2>
    <div class="more-info-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path('more-artworks-img.jpg') %>')"><%= link_to 'Discover More Artworks', artworks_path, class:"more-info-button" %></div>
    <div class="more-info-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path('more-artists-img.jpg') %>')"><%= link_to 'Discover All Our Artists', artists_path, class:"more-info-button" %></div>
  </div>
</div>

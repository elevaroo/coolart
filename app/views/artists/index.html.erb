
<div class="content">
  <h2> Discover our artists </h2>
  <div class="container">
    <% @artists.each do |artist| %>
    <%= link_to artist_path(artist), style: 'text-decoration: none' do%>
    <div class="d-flex flex-wrap align-items-start">

     <div class="artist-card artist-profile-pic">
      <div class="artist-nickname">
        <h4><%= artist.user.username %></h4>
      </div>
      <% if artist.user.photo.attached? %>
      <%= cl_image_tag artist.users.photo.key, crop: :fill %>
      <% else %>
      <img class="image-wrap artist-profile-pic"src="https://source.unsplash.com/800x450/?<%= artist.nationality %> wallpaper">
      <% end %>
      <div class="d-flex justify-content-between my-2 mx-2">
        <%= artist.location %>
        <%= artist.nationality %>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
</div>
</div>
</div>
</div>





<div class="content">
  <div class="container">
    <div class="d-flex flex-wrap align-items-start">
     <% @artists.each do |artist| %>
     <div class=" card-wrapper artist-profile-pic">
       <%= artist.user.username %>
       <% if artist.user.photo.attached? %>
       <%= cl_image_tag artist.users.photo.key, crop: :fill %>
       <% else %>
       <img class="card-item artist-profile-pic" src='https://source.unsplash.com/800x450/?people'>
       <% end %>""
       <div class="d-flex justify-content-between my-2 mx-2">
        <%= artist.location %>
        <%= artist.nationality %>
      </div>
      <div class="d-flex justify-content-between my-2 mx-2">
        <%= link_to 'More info', artist_path(artist)%>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>

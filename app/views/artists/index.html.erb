<div class="artworks-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= image_path('banner_3_home.jpg') %>')">
  <h1 class="artworks-banner-title">Discover our artists.</h1>
</div>

<div class="background-container">
  <div class="content">
    <div class="container">
    <div class="d-flex flex-wrap align-items-start">
      <% @artists.each do |artist| %>
           <%= link_to artist_path(artist.user.username), style: 'text-decoration: none' do %>
        <div class=" card-wrapper artist-profile-pic">
          <div class="artist-nickname">
          <h3><%= artist.user.username %></h2>
        </div>
        <div class="profile-size">
          <% if artist.user.photo.attached? %>
            <%= cl_image_tag artist.user.photo.key, crop: :fill, class:"pic-size"%>
          <% else %>
            <img class="pic-size" src='https://www.pphfoundation.ca/wp-content/uploads/2018/05/default-avatar.png'>
          <% end %>
          </div>
        <div class="d-flex justify-content-between my-2 mx-2">
          <%= artist.location %><i class="fas fa-thumbtack"></i>
        </div>
          <div class="d-flex justify-content-between my-2 mx-2">
          <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

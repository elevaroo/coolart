<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @order.artwork.photos.first, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-success"><%= @order.status %></span></small></h1>
      <h2>Congratulations for your COOLART purchase!</h2>
      <ul class="list-unstyled">
        <li class=""><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>ARTWORK</strong> <%= @order.artwork.name %></li>
        <li><strong>ARTIST</strong> <%= @order.artwork.artist.user.first_name %> <%= @order.artwork.artist.user.last_name %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>5 business days</strong></p>
      <div class="my-5">
        <div class="my-4"><%= link_to "Visit your Dashboard", profile_path, class:"add-button" %></div>
        <div><%= link_to "Browse more Artworks", artworks_path, class:"add-button" %></div>
      </div>
    </div>
  </div>
</div>
